<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>User Activity</title>
  <link rel="stylesheet" href="css/activity.css">
  <link rel="icon" href="images/favicon.ico">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body style="background-color:#FEFBF3">
  <!-- navigation bar -->
  <nav class="navbar navbar-expand-lg   navigationbar" style="background-color: #37517e;">
    <div class="collapse navbar-collapse">

      <span class="navbar-brand mb-0 h2 head" style="color:#fff">Xperience</span>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" style="color:#fff" href="/home">Home <span class="sr-only">(current)</span></a>
        </li>
    
        <li class="nav-item">
          <a class="nav-link" style="color:#fff" href="/profile">Profile</a>
        </li>
      </ul>
      <form class="form-inline ml-auto" action="/logout">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Logout</button>
      </form>
    </div>

  </nav>

  

  <!-- user experience  -->
  <%articles.forEach(function(article){%>
    <div class="row " style="margin-top:20px;">
      <div class="col-9 mt-4 ml-4">
        <div class="card">
          <div class="row ">
            <div class="col-1">
              <img class="profilepic" src=<%= article.imageURL != 'undefined' ? article.imageURL : "images/profilepic.png" %>>
            </div>
            <div class="col-8 namehead">
              <div><strong><%= article.fullname %></strong></div>
              <div class="intro"><i class="fas fa-user-graduate"></i><%= article.graduation %></div>
            </div>
            <div class="col-2 viewprofile">
              <% if(  article.email === curUserEmail) { %> 
                    <a href="/profile">  <button class="btn btn-primary profile-button" style="background-color: #37517e" type="button">Your Profile</button></a>
              <%}%>
             <% if(  article.email != curUserEmail) { %>
                    <a href="/users/<%=article.email%>">  <button class="btn btn-primary profile-button" style="background-color: #37517e" type="button">Visit Profile</button></a>
             <% }  %>
            </div>
          </div>
          <hr>
          <div class="card-block">
            <div class="timeline-details">
              <div><h4><%=article.company %></h4></div>
              <p >
                <%= article.content %>
              </p>
            </div>
          </div>
          <hr>
          
    
        </div>
        </div>
    </div>
<% });%>
 
   

</body>

</html>