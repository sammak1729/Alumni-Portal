<!-- user info -->
<div class="panel">
    <div class="bio-graph-heading">

      <p><%= aboutme %></p>
    </div>
    <div class="panel-body bio-graph-info">
        <h1 class="headbio">Bio Graph</h1>
        <div class="row">
            <div class="bio-row">
                <p> <i class="fas fa-user"  style="padding-right:5px; padding-left:5px"></i>Name: <%= userFullname%></p>
            </div>
            <div class="bio-row">
                <p><span><i class="fas fa-user-graduate" style="padding-right:5px; padding-left:5px"></i> graduation</span>: <%= graduation %></p>
            </div>
            <div class="bio-row">
                <p><span><i class="fas fa-user-tie" style="padding-right:5px; padding-left:5px"></i>Current Company</span>: <%= company %></p>
            </div>
            <div class="bio-row">
                <p><span><i class="fas fa-file-code" style="padding-right:5px; padding-left:5px"></i>Position</span>: <%= position %></p>
            </div>
            <div class="bio-row">
                <p><span><i class="fas fa-laptop" style="padding-right:5px; padding-left:5px"></i>Branch</span>: <%= branch %></p>
            </div>
        </div>

        <h1 class="headbio">Profile links</h1>
        <div class="row">
            <div class="bio-row">
               
                 <a href='<%=cfProfile%>' > <img class="linksimg" src="/images/codeforces.jpg" alt=""></a>
            </div>
            <div class="bio-row">
                
               <a href=<%=gfgProfile %>><img class="linksimg" src="/images/gfg.jpg" alt=""></a>
            </div>
            <div class="bio-row">
                
               <a href=<%=lnProfile%>><img class="linksimg" src="/images/linkedin.jpg" alt=""></a>
            </div>
            <div class="bio-row">
                
               <a href=<%=lcProfile%>><img class="linksimg" src="/images/leetcode.jpg" alt=""></a>
            </div>
              <div class="bio-row">
                
               <a href=<%=ghProfile%>><img class="linksimg" src="/images/github.jpg" alt=""></a>
              </div>
        </div>
    </div>

</div>
<div class="article"><h3>User Articles</h3></div>
<%articles.forEach(function(article){%>
  <div class="panel">
    <div class="card" style="margin-top:10px;">
      <!--
  <div class="card-block">
    <div>  <img class="profilepic" src="images/leetcode.jpg" alt=""><strong class="namehead">Anupam Jha</strong></div>
    </div>
     -->
      <div class="row ">
        <div class="col-1">
          <img class="profilepics" src=<%= article.imageURL != 'undefined' ? article.imageURL : "images/profilepic.png" %>>
        </div>
        <div class="col-8 namehead">
          <div><strong><%= article.fullname %></strong></div>
          <div class="intro"><i class="fas fa-user-graduate"></i> <%= article.graduation %></div>
        </div>
      </div>
      <hr>
      <div class="card-block">
        <div class="timeline-details">
          <div><%=article.company%></div>
          <p >
            <%=article.content%>
          </p>
        </div>
      </div>
      <hr>
      <!-- <div class="card-block social-msg">
        <i class="fas fa-thumbs-up" style="padding-right:5px;"></i><span>Likes (20)</span>
      </div> -->
  
    </div>
  </div>
  <% });%>

    </div>
    </div>
</div>
